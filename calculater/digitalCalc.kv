Calculator:

<Calculator>:
    orientation: "vertical"
    display_text: display_label
    BoxLayout:
        size_hint_y: 1.25
        Label:
            id: display_label
            text_size: 250,None
            halign: "right"
            valign: "middle"
            font_size: 30
            text: "0"

    BoxLayout:
        size_hint_y: 1.0
        BoxLayout:
            Button:
                size_hint_x: 0.75
                text: "AC"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                size_hint_x: 0.25
                text: "/"
                on_press:
                    root.show_pressed_button(self.text)
    BoxLayout:
        size_hint_y: 1.0
        BoxLayout:
            Button:
                text: "7"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "8"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "9"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "x"
                on_press:
                    root.show_pressed_button(self.text)
    BoxLayout:
        size_hint_y: 1.0 
        BoxLayout:
            Button:
                text: "4"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "5"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "6"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "-"
                on_press:
                    root.show_pressed_button(self.text)
    BoxLayout:
        size_hint_y: 1.0
        BoxLayout:
            Button:
                text: "1"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "2"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "3"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "+"
                on_press:
                    root.show_pressed_button(self.text)
    BoxLayout:
        size_hint_y: 1.0 
        BoxLayout:
            Button:
                text: "0"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "00"
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "."
                on_press:
                    root.show_pressed_button(self.text)
            Button:
                text: "="
                on_press:
                    root.show_pressed_button(self.text)

